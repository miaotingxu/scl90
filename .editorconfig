# EditorConfig is awesome: https://EditorConfig.org
# 统一不同编辑器的代码风格

# 顶级配置文件
root = true

# ===========================
# 所有文件的默认设置
# ===========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ===========================
# HTML 文件
# ===========================
[*.html]
indent_style = space
indent_size = 4

# ===========================
# CSS 文件
# ===========================
[*.css]
indent_style = space
indent_size = 4

# ===========================
# JavaScript 文件
# ===========================
[*.js]
indent_style = space
indent_size = 4

# ===========================
# JSON 文件
# ===========================
[*.json]
indent_style = space
indent_size = 2

# ===========================
# Markdown 文件
# ===========================
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# ===========================
# YAML 文件
# ===========================
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ===========================
# 配置文件
# ===========================
[{package.json,.cursorrules,.cursorignore}]
indent_style = space
indent_size = 2

